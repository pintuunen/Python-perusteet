# -*- coding: cp1252 -*-

import time



while True:
    print("""(1) Lue muistikirjaa
(2) Lisää merkintä
(3) Tyhjennä muistikirja
(4) Lopeta
""")
    valinta=int(input("Mitä haluat tehdä?: "))
    if valinta == 1:
        tiedosto = open("muistio.txt","r")
        sisalto = tiedosto.readline()
        print(sisalto)
        tiedosto.close()
    elif valinta == 2:
        tiedosto = open("muistio.txt","a")
        lisays = input("Kirjoita uusi merkintä: ")
        lisays = lisays + ':::'+ time.strftime("%X %x") + "\n"
        tiedosto.write(lisays)
        tiedosto.close()
    elif valinta == 3:
        tiedosto = open("muistio.txt","w")
        print("Muistio tyhjennetty.")
        tiedosto.close()
    elif valinta == 4:
        print("Lopetetaan.")
        break
    else:
        print("Tuntematon valinta.")
